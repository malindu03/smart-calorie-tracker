// Prisma is an ORM (Object-Relational Mapping) tool. 
// Acts like a translator between your JavaScript code and your PostgreSQL database.

// Tells Prisma to generate JavaScript code that I'll use to talk to the database.
generator client {
  provider = "prisma-client-js"
}

// Link to database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        Int       @id @default(autoincrement())  //id marks it as the primary key
  username  String    @unique
  email     String    @unique
  password  String    // Hashed password
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  mealLogs  MealLog[]
  
  @@map("users") // Table name is 'users'
}

// MealLog model for tracking food intake
model MealLog {
  id        Int      @id @default(autoincrement())
  userId    Int    //foreign key 
  foodName  String
  calories  Int
  protein   Float
  carbs     Float
  fat       Float
  source    String   @default("MANUAL") // MANUAL, AI_PHOTO, BARCODE
  createdAt DateTime @default(now())
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  //fields: [userId]: The foreign key in THIS table
  //references: [id]: Points to the id in User table
  //onDelete: Cascade: If user is deleted, delete all their meal logs too
  
  @@map("meal_logs")
}
